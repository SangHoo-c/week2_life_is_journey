<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    xmlns:fabview="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/image_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="16dp"
        android:elevation="6dp"
        android:clickable="true"
        android:src="@drawable/icon_1"
        android:visibility="invisible"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:elevation="6dp"
        android:src="@drawable/icon_1"
        android:visibility="invisible"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/icon_1"
        android:background="@color/transparent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="15dp"
        android:background="@drawable/grid_item_radius"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/like_anim_view"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/like_anim_view"
            >
            <TextView
                android:textStyle="bold"
                android:background="@drawable/grid_item_radius_2"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/text_like_count"
                android:textColor="#495057"
                />
        </RelativeLayout>
    </LinearLayout>



</FrameLayout>